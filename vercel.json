{
  "version": 2,
  "name": "kasam-healthcare-backend",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server.js"
    }
  ],
  "functions": {
    "server.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-slot-refresh",
      "schedule": "1 0 * * *"
    },
    {
      "path": "/api/cron/slot-cleanup",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/appointment-cleanup",
      "schedule": "0 2 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
